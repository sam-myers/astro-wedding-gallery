---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Thumb from "../components/Thumb.astro";

let title = "Sam & Leah Wedding";
let description = "Sam & Leah's Wedding Photos";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>{title}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta property="og:image" content="https://html5up.net/uploads/cards/multiverse.jpg" />

    <link href="./favicon.ico" rel="shortcut icon" />
    <link rel="stylesheet" href="css/main.css" />
  </head>

  <body class="is-preload">
    <div id="wrapper">
      <Header title={title} />

      <div id="main">
        <Thumb
            title="Sam's Socks"
            description='They say "Groom"'
            href="/images/prep/sam-socks.jpg"
        />
        <Thumb
            title="Nathan Getting Ready"
            href="/images/prep/nathan-cuffs.jpg"
            crop=true
        />
        <Thumb
            title="Sam's Cufflinks"
            description="In Leah's handwriting"
            href="/images/prep/sam-cufflinks.jpg"
        />
        <Thumb
            title="A Hand Please"
            description="The coat was difficult to put on!"
            href="/images/prep/sam-coat.jpg"
        />
        <Thumb
            title="Yes Son, You Are Presentable"
            href="/images/prep/arnie-arnie.jpg"
        />
        <Thumb
            title="Ties Are A 2-Man Job"
            href="/images/prep/max-tie.jpg"
        />
        <Thumb
            title="Mother of the Groom"
            description="She put on the boutonniere for me"
            crop=true
            href="/images/prep/sam-alexis.jpg"
        />
        <Thumb
            title="Parents of the Groom"
            href="/images/prep/alexis-ben.jpg"
        />
        <Thumb
            title="Zippers"
            href="/images/prep/leah-anticipation.jpg"
        />
        <Thumb
            title="Motherly Love"
            description="I don't know why she needed help with the wrist thing"
            href="/images/prep/leah-kim.jpg"
        />
        <Thumb
            title="Leah's Earrings"
            href="/images/prep/leah-earrings.jpg"
        />
        <Thumb
            title="Taking A Break"
            description="Getting dressed is hard, okay?"
            crop=true
            href="/images/prep/leah-sit-down.jpg"
        />
        <Thumb
            title="Fatherly Love"
            description="This is a great photo of Jeff"
            href="/images/prep/leah-fatherly-love.jpg"
        />
      </div>

      <Footer
        title="Sam & Leah Wedding, Sept 17 2022"
        description="A thank you to our friends and family for being a part of our special day."
        github="https://github.com/sam-myers/"
        linkedin="https://www.linkedin.com/in/samuelrogermyers/"
      />
    </div>

    <script is:inline src="js/jquery.min.js"></script>
    <script is:inline src="js/jquery.poptrox.min.js"></script>
    <script is:inline src="js/browser.min.js"></script>
    <script is:inline src="js/breakpoints.min.js"></script>
    <script is:inline src="js/util.js"></script>
    <script is:inline src="js/main.js"></script>
  </body>
</html>
